<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="Proyecto_Empresarial_GYM" transaction-type="RESOURCE_LOCAL">
	
		<class>pe.com.proygym.model.Categoria</class>
		<class>pe.com.proygym.model.Proveedor</class>
		<class>pe.com.proygym.model.Producto</class>
		<class>pe.com.proygym.model.Distrito</class>
		<class>pe.com.proygym.model.TipoUsuario</class>
		<class>pe.com.proygym.model.Usuario</class>
		<class>pe.com.proygym.model.Pedido	</class>
	    <class>pe.com.proygym.model.DetallePedido	</class>
	    <class>pe.com.proygym.model.Factura	</class>
	    <class>pe.com.proygym.model.DetalleFactura	</class>
	
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/doggym" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="mysq" />
			<property name="eclipselink.logging.level" value="OFF" />
 			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>  -->
		</properties>
		
	</persistence-unit>
</persistence>
